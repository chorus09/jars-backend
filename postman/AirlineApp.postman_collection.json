{
  "info": {
    "name": "Airline App API",
    "description": "Postman collection pentru testarea API-ului NestJS (flights, reservations, users, admin)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "airline-app-collection"
  },
  "item": [
    {
      "name": "Flights",
      "item": [
        {
          "name": "Get Flights List",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/flights/list",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "flights",
                "list"
              ]
            }
          }
        },
        {
          "name": "Get Flight Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/flights/details/1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "flights",
                "details",
                "1"
              ]
            }
          }
        },
        {
          "name": "Search Flights",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/flights/search?name=Airbus&minPrice=100&maxPrice=200",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "flights",
                "search"
              ],
              "query": [
                {
                  "key": "name",
                  "value": "Airbus"
                },
                {
                  "key": "minPrice",
                  "value": "100"
                },
                {
                  "key": "maxPrice",
                  "value": "200"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Reservations",
      "item": [
        {
          "name": "Get Reservations List",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reservations/list",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "reservations",
                "list"
              ]
            }
          }
        },
        {
          "name": "Get Reservation Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reservations/details/1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "reservations",
                "details",
                "1"
              ]
            }
          }
        },
        {
          "name": "Get My Reservations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-role",
                "value": "client"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reservations/my/Ion",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "reservations",
                "my",
                "Ion"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Users List",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/list",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "users",
                "list"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get All Flights (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-role",
                "value": "admin"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/flights/list",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "flights",
                "list"
              ]
            }
          }
        },
        {
          "name": "Edit Flight (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-role",
                "value": "admin"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"status\": \"in-maintenance\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/flights/edit/1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "flights",
                "edit",
                "1"
              ]
            }
          }
        },
        {
          "name": "Get All Reservations (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-role",
                "value": "admin"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/reservations/list",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "reservations",
                "list"
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
}